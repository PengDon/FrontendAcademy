{
  "name": "electron-security-best-practices",
  "version": "1.0.0",
  "description": "Electron安全最佳实践示例",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint .",
    "security-audit": "npm audit"
  },
  "keywords": [
    "electron",
    "security",
    "best-practices",
    "tutorial",
    "example"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.0",
    "eslint": "^8.50.0",
    "eslint-plugin-security": "^1.7.1"
  },
  "build": {
    "appId": "com.electron.security-example",
    "productName": "Electron Security Example",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "security-config.js",
      "index.html"
    ],
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "electron": {
    "version": "^28.0.0"
  }
}